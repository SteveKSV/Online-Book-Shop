@page "/"
@namespace Client.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<component type="typeof(App)" render-mode="ServerPrerendered" />
<script>
    window.resetCheckboxes = function () {
        var checkboxes = document.querySelectorAll('input[type="checkbox"]');
        checkboxes.forEach(function (checkbox) {
            checkbox.checked = false;
        });
    };

    function resetRadioButtons() {
        // Reset sort price radio buttons
        const sortPriceRadios = document.getElementsByName('sortPrice');
        sortPriceRadios.forEach(radio => {
            radio.checked = radio.value === 'none'; // Set 'Default' to checked
        });

        // Reset genre filter radio buttons
        const genreFilterRadios = document.getElementsByName('genreFilter');
        genreFilterRadios.forEach(radio => {
            radio.checked = radio.value === ''; // Set 'All Genres' to checked
        });
    }
</script>
